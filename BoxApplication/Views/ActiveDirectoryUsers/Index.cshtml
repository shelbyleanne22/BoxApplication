@model IEnumerable<BoxApplication.Models.ActiveDirectoryUser>

@{
    ViewData["Title"] = "Index";
}

<h1>Active Directory Accounts</h1>

@if (Model.Count() != 0)
{
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ADEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ADFullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ADStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ADDateModified)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ADEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ADFullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ADStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ADDateModified)
                </td>
            </tr>
        }
    </tbody>
</table>
}
else
{
    <p>No active directory user information in database.</p>
}



@model IEnumerable<BoxApplication.Models.BoxFile>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BoxFileType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BoxFileName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BoxFileType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BoxFileName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BoxFileID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BoxFileID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BoxFileID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
